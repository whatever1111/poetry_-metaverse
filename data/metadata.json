    "validation_rules": {
      "questions": {
        "required_fields": ["id", "question", "options", "meaning"],
        "id_format": "chapter_prefix + q + number",
        "options_count": 2,
        "meaning_keys": ["A", "B"]
      },
      "mappings": {
        "required_fields": ["units"],
        "binary_encoding": "4位二进制对应16首诗歌",
        "chapter_references": "must_exist_in_questions"
      },
      "projects": {
        "required_fields": ["id", "name", "description", "subProjects"],
        "id_format": "project_*",
        "subproject_references": "must_exist_in_questions"
      }
    }
